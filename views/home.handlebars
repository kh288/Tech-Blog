<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
        {{!-- <a href="/post/{{post.id}}">{{post.name}}</a> --}}
        </h2>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
        {{text}}
        </p>
    </div>
</div>
{{/each}}
